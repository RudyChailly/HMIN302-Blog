
{% if (formReportComment is defined) and (app.user is not null)%}
    {{ form_start(formReportComment) }}
        <div class="modal fade" id="reportCommentModal" tabindex="-1" aria-labelledby="reportCommentModal-label" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title font-weight-bold text-secondary" id="reportCommentModal-label">Signaler le commentaire</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="form-comment-content"> Commentaire </label>
                            <div class="border px-3 pt-3 rounded font-size-08" id="form-report-comment-content">
                                <p></p>
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(formReportComment.category) }}
                            {{ form_widget(formReportComment.category, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group d-none">
                            {{ form_widget(formReportComment.target, {'attr': {'class': 'form-control '}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(formReportComment.description) }}
                            {{ form_widget(formReportComment.description, {'attr': {'class': 'form-control', 'rows':4}}) }}
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn-pill btn-outline-grey" data-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn-pill btn-danger">{{ button_label|default('Signaler') }}</button>
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(formReportComment) }}
{% endif %}

