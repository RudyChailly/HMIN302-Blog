{% extends 'base.html.twig' %}

{% block title %}ReportComment index{% endblock %}

{% block body %}
    <h1>ReportComment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>Description</th>
                <th>Created</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for report_comment in report_comments %}
            <tr>
                <td>{{ report_comment.id }}</td>
                <td>{{ report_comment.category }}</td>
                <td>{{ report_comment.description }}</td>
                <td>{{ report_comment.created ? report_comment.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('report_comment_show', {'id': report_comment.id}) }}">show</a>
                    <a href="{{ path('report_comment_edit', {'id': report_comment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('report_comment_new') }}">Create new</a>
{% endblock %}
