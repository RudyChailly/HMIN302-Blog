<form class="d-flex justify-content-end"  method="post" action="{{ path('user_delete', {'id': user.id}) }}"
      onsubmit="return confirm('Supprimer l\'utilisateur {{ user.username }} ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn text-danger pt-0" data-toggle="tooltip" data-placement="top" title="Supprimer l'utilisateur">
        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-check text-success" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z"/>
        </svg>
    </button>
</form>
