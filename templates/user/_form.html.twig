{{ form_start(formSignUp, {'attr': {'class': 'col-6'}}) }}
    <div class="form-group">
        {{ form_label(formSignUp.username) }}
        {{ form_widget(formSignUp.username, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(formSignUp.email) }}
        {{ form_widget(formSignUp.email, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(formSignUp.password.first) }}
        {{ form_widget(formSignUp.password.first, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(formSignUp.password.second) }}
        {{ form_widget(formSignUp.password.second, {'attr': {'class': 'form-control'}}) }}
    </div>
    <button class="float-right mt-2 btn-pill btn-secondary">{{ button_label|default('Valider') }}</button>
{{ form_end(formSignUp) }}