<form class="form-delete-button" method="post" action="{{ path('user_delete', {'id': user.id}) }}"
      onsubmit="return confirm('Supprimer l\'utilisateur {{ user.username }} ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button type="submit" class="btn-pill btn-outline-danger">Supprimer le compte</button>
</form>
