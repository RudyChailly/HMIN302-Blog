<div class="col-4 py-3 article-preview"
        {% if article.urlAlias is defined %}
            onclick="location.href='{{ path('article_show', {'urlAlias': article.urlAlias}) }}'"
        {% else %}
            onclick="location.href='{{ path('article_partners_show', {'id': article.id|number_format}) }}'"
        {% endif %}>
        <div class="card bg-transparent border-0 h-100">
            {% if (article.thumbnail is defined) and (article.thumbnail is not null) %}
        <img class="card-img-top article-preview-thumbnail border" src="{{ asset('uploads/article/' ~ article.thumbnail ) }}" alt="..."/>
            {% else %}
                <div class="card-img-top article-preview-default-thumbnail border d-flex justify-content-center align-items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-newspaper" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M0 2.5A1.5 1.5 0 0 1 1.5 1h11A1.5 1.5 0 0 1 14 2.5v10.528c0 .3-.05.654-.238.972h.738a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 1 1 0v9a1.5 1.5 0 0 1-1.5 1.5H1.497A1.497 1.497 0 0 1 0 13.5v-11zM12 14c.37 0 .654-.211.853-.441.092-.106.147-.279.147-.531V2.5a.5.5 0 0 0-.5-.5h-11a.5.5 0 0 0-.5.5v11c0 .278.223.5.497.5H12z"/>
                        <path d="M2 3h10v2H2V3zm0 3h4v3H2V6zm0 4h4v1H2v-1zm0 2h4v1H2v-1zm5-6h2v1H7V6zm3 0h2v1h-2V6zM7 8h2v1H7V8zm3 0h2v1h-2V8zm-3 2h2v1H7v-1zm3 0h2v1h-2v-1zm-3 2h2v1H7v-1zm3 0h2v1h-2v-1z"/>
                    </svg>
                </div>
            {% endif %}
        <div class="card-body pt-1 px-0 pb-2">
            {% if article.category is defined %}
            <a class="text-primary text-uppercase article-preview-category" href="#">
                {{ article.category.name }}
            </a>
            {% endif %}

            <div class="pt-1 font-weight-bold">
                {{ article.title|slice(0,70) }}{% if article.title|length > 70 %}<span class="font-weight-normal">...</span>{% endif %}
            </div>

        </div>
        <div class="card-footer bg-transparent border-0 p-0">
            {% if article.author is defined %}
            <a href="{{ path('user_show', {'username': article.author.username}) }}"> {{ article.author.username }} </a>
            {% endif %}
            <div class="d-flex justify-content-between">
                <div class="d-flex flex-row">
                    {% if (article.published is defined) or (article.datePost is defined) %}
                    <svg xmlns="http://www.w3.org/2000/svg" height="21px" fill="currentColor" class="bi bi-calendar-event icon mr-1" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
                        <path d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z"/>
                    </svg>
                        {% if (article.published is defined) %}
                            <div> {{ article.published|date("d/m/y") }} </div>
                            {% else %}
                                <div> {{ article.datePost.date|date("d/m/y") }} </div>
                            {% endif %}
                    {% endif %}
                </div>
                <div class="d-flex flex-row">
                    {% if article.comments is defined %}
                    <div> {{ article.comments|length }} </div>
                    <svg height="24px" xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-chat-left-text icon ml-1" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v11.586l2-2A2 2 0 0 1 4.414 11H14a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                        <path fill-rule="evenodd" d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6zm0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z"/>
                    </svg>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>