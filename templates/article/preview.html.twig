<div class="col-4 py-3 article-preview" onclick="location.href='{{ path('article_show', {'urlAlias': article.urlAlias}) }}'">
    <div class="card bg-transparent border-0  h-100">
        <img class="card-img-top article-preview-thumbnail border" src="{{ asset('uploads/article/' ~ article.thumbnail ) }}" alt="..."/>
        <div class="card-body pt-1 px-0 pb-2">
            <a class="text-primary text-uppercase article-preview-category" href="#">
                {{ article.category.name }}
            </a>

            <div class="pt-1 font-weight-bold">
                {{ article.title|slice(0,70) }}{% if article.title|length > 70 %}<span class="font-weight-normal">...</span>{% endif %}
            </div>

        </div>
        <div class="card-footer bg-transparent border-0 p-0">
            <a href="{{ path('user_show', {'username': article.author.username}) }}"> {{ article.author.username }} </a>
            <div class="d-flex justify-content-between">
                <div class="d-flex flex-row">
                    <svg xmlns="http://www.w3.org/2000/svg" height="21px" fill="currentColor" class="bi bi-calendar-event-fill icon mr-1" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M4 .5a.5.5 0 0 0-1 0V1H2a2 2 0 0 0-2 2v1h16V3a2 2 0 0 0-2-2h-1V.5a.5.5 0 0 0-1 0V1H4V.5zM16 14V5H0v9a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2zm-3.5-7a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1z"/>
                    </svg>
                    <div> {{ article.published|date("d/m/y") }} </div>
                </div>
                <div class="d-flex flex-row">
                    <div> {{ article.comments|length }} </div>
                    <svg height="24px" xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-chat-left-text-fill icon ml-1" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H4.414a1 1 0 0 0-.707.293L.854 15.146A.5.5 0 0 1 0 14.793V2zm3.5 1a.5.5 0 0 0 0 1h9a.5.5 0 0 0 0-1h-9zm0 2.5a.5.5 0 0 0 0 1h9a.5.5 0 0 0 0-1h-9zm0 2.5a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5z"/>
                    </svg>
                </div>
            </div>
        </div>
    </div>
</div>