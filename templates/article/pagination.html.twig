<nav aria-label="Page navigation example" class="">
    <ul class="pagination justify-content-center mb-0 mt-5">
        <li class="page-item {% if page == 1 %} disabled {% endif %}">
            <a class="page-link" href="{{ path('article_'~active, {'page': page - 1}) }}" tabindex="-1" aria-disabled="true">&laquo;</a>
        </li>
        {% for i in 0..(nbArticles/12) %}
         <li class="page-item">
             {% if (i+1) == page %}
                 <div class="page-link font-weight-bold">{{ i + 1}}</div>
             {% else %}
                 <a class="page-link" href="{{ path('article_'~active, {'page': i + 1}) }}">{{ i + 1}}</a>
             {% endif %}

         </li>
        {% endfor %}
        <li class="page-item {% if page >= (nbArticles/12) %} disabled {% endif %}">
            <a class="page-link" href="{{ path('article_'~active, {'page': page + 1}) }}">&raquo;</a>
        </li>
    </ul>
</nav>