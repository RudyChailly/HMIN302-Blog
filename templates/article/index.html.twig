{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

    <div class="container mt-3">
        <div class="d-flex justify-content-between mb-3">
            <h1 class="mb-0"> Articles </h1>
        {% if (app.user) %}
            <a class="btn-pill btn-outline-primary my-auto" href="{{ path('article_new') }}">
                Nouvel article
            </a>
        {% endif %}
        </div>
        <ul class="nav nav-tabs nav-fill">
            {% if app.user %}
                <li class="nav-item">
                    {% if 'follows' in app.request.pathinfo %}
                        <div class="nav-link active">Articles suivis</div>
                    {% else %}
                        <a class="nav-link" href="{{ path('article_follows') }}">Articles suivis</a>
                    {% endif %}
                </li>
            {% endif %}
            <li class="nav-item">
                {% if 'all' in app.request.pathinfo %}
                    <div class="nav-link active">Tous les articles</div>
                {% else %}
                    <a class="nav-link" href="{{ path('article_all') }}">Tous les articles</a>
                {% endif %}
            </li>
            <li class="nav-item">
                {% if 'partners' in app.request.pathinfo %}
                    <div class="nav-link active">Articles partenaires</div>
                {% else %}
                    <a class="nav-link" href="{{ path('article_partners_index') }}">Articles partenaires</a>
                {% endif %}
            </li>
        </ul>
        <div class="bg-white card-group border border-top-0">
        {% for article in articles %}
            {{ include('article/preview.html.twig', {'article': article}) }}
        {% endfor %}
        </div>
    </div>

{% endblock %}
