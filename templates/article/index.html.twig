{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

    <div class="container mt-3">
        <div class="d-flex justify-content-between mb-3">
            <h1 class="mb-0"> Articles </h1>
        {% if (app.user) %}
            <a class="btn-pill btn-outline-primary my-auto" href="{{ path('article_new') }}">
                Nouvel article
            </a>
        {% endif %}
        </div>
        <ul class="nav nav-tabs nav-fill">
            <li class="nav-item">
                <a class="nav-link active" href="#">Tous les articles</a>
            </li>
            {% if app.user %}
            <li class="nav-item">
                <a class="nav-link" href="#">Articles suivis</a>
            </li>
            {% endif %}
            <li class="nav-item">
                <a class="nav-link" href="#">Articles partenaires</a>
            </li>
        </ul>
        <div class="bg-white card-group border border-top-0">
        {% for article in articles %}
            {{ include('article/preview.html.twig', {'article': article}) }}
        {% endfor %}
        </div>
    </div>

{% endblock %}
