{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    {% if (app.user) %}
    <a href="{{ path('article_new') }}">Create new</a>
    {% endif %}
    {% for article in articles %}
        <div class="border">
            <h1> <a href="{{ path('article_show', {'urlAlias': article.urlAlias}) }}"> {{ article.title }} </a> </h1>
            <div> {{ article.content }} </div>
            <div> {{ article.published|date("d/m/Y") }} Ã  {{ article.published|date("H:i") }}</div>
            <div> {{ article.category.name }} </div>
            <div> {{ article.author.username }} </div>
        </div>
    {% endfor %}
{% endblock %}
