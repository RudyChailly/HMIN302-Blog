{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    {% for article in articles %}
        <div class="border">
            <h1> {{ article.title }}</h1>
            <div> {{ article.content }} </div>
            <div> {{ article.published|date("m/d/Y") }}</div>
        </div>
    {% endfor %}
{% endblock %}
