{% extends 'base.html.twig' %}

{% block title %}ReportArticle index{% endblock %}

{% block body %}
    <h1>ReportArticle index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>Description</th>
                <th>Created</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for report_article in report_articles %}
            <tr>
                <td>{{ report_article.id }}</td>
                <td>{{ report_article.category }}</td>
                <td>{{ report_article.description }}</td>
                <td>{{ report_article.created ? report_article.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('report_article_show', {'id': report_article.id}) }}">show</a>
                    <a href="{{ path('report_article_edit', {'id': report_article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('report_article_new') }}">Create new</a>
{% endblock %}
